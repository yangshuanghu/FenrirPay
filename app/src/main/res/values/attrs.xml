<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HeadView">
        <attr name="left_btn">
            <enum name="none" value="0" />
            <enum name="menu" value="1" />
            <enum name="back" value="2" />
            <enum name="close" value="3" />
        </attr>
        <attr name="right_btn">
            <enum name="none" value="0"/>
            <enum name="reload" value="1"/>
        </attr>
        <attr name="title_text" format="string" />
        <attr name="right_text" format="string" />
        <attr name="right_text_color" format="reference" />
        <attr name="shadow_back" format="reference" />
        <attr name="show_shadow" format="boolean" />
    </declare-styleable>
    <declare-styleable name="MenuItemView">
        <attr name="item_back" format="reference"/>
        <attr name="text_color" format="reference"/>
        <attr name="icon_src" format="reference"/>
        <attr name="item_text" format="string"/>
    </declare-styleable>
</resources>