<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="start"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    tools:text="タイトルタイトルタイトルタイトルタイトル"
                    android:textColor="@color/color_gr1"
                    android:textSize="20sp"
                    android:lineSpacingExtra="7sp"/>

                <TextView
                    android:id="@+id/dialog_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    tools:text="メッセージメッセージメッセージメッセージメッセージ"
                    android:textColor="@color/color_gr2"
                    android:textSize="16sp"
                    android:lineSpacingExtra="10sp"

                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/dialog_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="@dimen/dialog_button_bar_horizontal_padding"
        android:paddingEnd="@dimen/dialog_button_bar_horizontal_padding"
        android:paddingTop="@dimen/dialog_button_bar_vertical_padding"
        android:paddingBottom="@dimen/dialog_button_bar_vertical_padding">

        <TextView
            style="?attr/buttonBarNegativeButtonStyle"
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/dialog_button_cancel"
            android:textColor="@color/color_re1" />

        <TextView
            style="?attr/buttonBarPositiveButtonStyle"
            android:id="@+id/dialog_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/dialog_button_delete"
            android:textColor="@color/color_re1" />

    </LinearLayout>

</LinearLayout>